azul-00 = #a7c9d5
amarillo-00 = #f2ab2b

.mayus
	text-transform uppercase
.azul-00
	color azul-00
.back-azul-00
	background-color azul-00
.amarillo-00
	color amarillo-00
.paytone
	font-family 'Paytone One', sans-serif
.roboto
	font-family 'Roboto', sans-serif
body
	background transparent
	font-family 'Roboto', sans-serif
.navbar-brand
	img
		width 56px
		height auto
		display block
.main-banner-home
	width 100%
	display block
	height 300px
	background gray
	padding-top 230px
	border-bottom 5px solid amarillo-00
h1.banner-title
	font-size 2em
	line-height .6em
	color white
	span
		font-size .4em
		letter-spacing 3px
.home-price-block
	width 100%
	background azul-00
	height 420px
	background transparent url(./images/background-precios-mobile.jpg) no-repeat 80px top
	background-size 500px
	padding-top 20px
	position relative
	overflow hidden
h2.title
	color white
	padding-left 150px
	font-size 1.4em
.image-racer-home
	width 185%
	height auto
	position absolute
	left 0
	bottom 0
	img
		width 100%
		height auto
		display block
.prices-container
	margin-top 40px
.price-item
	color white
	padding-left 120px
	position relative
	z-index 10
	.big-letter
		position absolute
		z-index -1
		font-size 6em
		top -50px
		left 100px
		color rgba(white, .4)
	p
		margin-bottom 0
		&.price-title
			font-size .7em
		&.big
			font-size 2em
			margin-top -10px
			position relative
			&::before
				content ''
				width 80px
				height 2px
				background amarillo-00
				bottom 0
				position absolute
		&.diclaimer
			font-size .7em
			font-weight 100
			padding-right 100px
			margin-top -15px
	.olas
		padding-left 80px
		img
			width 40px